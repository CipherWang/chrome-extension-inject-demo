{
  "name": "JoyID Extension",
  "version": "1.0",
  "description": "This is my first Chrome extension.",
  "manifest_version": 3,
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "web_accessible_resources": [{ 
	  "resources": ["/inject.js"],
	  "matches": ["<all_urls>"]
	}]
  
}
